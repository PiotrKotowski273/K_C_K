@model MusicEvents.Models.Event

@{
    ViewData["Title"] = "Delete Event";
}

<h1>Delete Event</h1>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Are you sure you want to delete this event?</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Title
            </dt>
            <dd class="col-sm-10">
                @Model.Title
            </dd>
            <dt class="col-sm-2">
                Location
            </dt>
            <dd class="col-sm-10">
                @Model.Location
            </dd>
            <dt class="col-sm-2">
                Genre
            </dt>
            <dd class="col-sm-10">
                @Model.Genre
            </dd>
            <dt class="col-sm-2">
                Artist
            </dt>
            <dd class="col-sm-10">
                @Model.Artist
            </dd>
            <dt class="col-sm-2">
                Date
            </dt>
            <dd class="col-sm-10">
                @Model.Date.ToShortDateString()
            </dd>
            <dt class="col-sm-2">
                Ticket Price
            </dt>
            <dd class="col-sm-10">
                @Model.TicketPrice
            </dd>
            <dt class="col-sm-2">
                Available Seats
            </dt>
            <dd class="col-sm-10">
                @Model.AvailableSeats
            </dd>
        </dl>
        <form asp-action="DeleteConfirmed">
            <div class="form-group">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
